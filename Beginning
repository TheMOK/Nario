};

class WinDirector {//Работяга, выполняет почти все технические внеигровые функции в игре
    private:
    int winW, winH;
    Game game;
    public:
    WinDirector(int w, int h) {
        winW = w;
        winH = h;
        game = *new Game();
        createWindow(winW, winH);
    }
    private:
    void createWindow(int w, int h) {
        TxWorker::createWindow(w, h);
    }

};

